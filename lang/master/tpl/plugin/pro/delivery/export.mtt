::use 'plugin/pro/design.mtt'::
<div class="col-md-12">
	<div class="article">
		
		<h3>Récapitulatif par produits</h3>	

		<table class="table table-striped">
			<tr>
				<td>Catalogues</td>
				<td>
					<b>Tous</b>
				</td>
			</tr>
			<tr>
				<td>
					Fenêtre de temps
				</td>
				<td>
					Du ::hDate(options.startDate):: au ::hDate(options.endDate)::
				</td>
			</tr>
			<tr>
				<td>Distributions</td>
				<td>
					<ul>
					::foreach d distributions::
					<li><a href="::vendor.getURL()::/delivery/view/::d.id::">::d._catalog._group.name::</a> : ::hDate(d.date)::, ::d._place.name:: </li>
					::end::
					</ul>
				</td>				
			</tr>
			
		</table>

		<table class="table table-bordered table-hover"  style="width:100%;">
			<tr>
				<th>Quantités</th>
				<th>Produit</th>
				<th>Référence</th>
				<th>Prix unitaire TTC</th>
				<th>Total</th>
			</tr>
			::set total = 0::
				::foreach m orders::
				
			<tr>
				
					<td>
						::m.quantity::
					</td>
					<td>
						::m.pname::
					</td>
					<td>
						$$nullSafe(::m.ref::)
					</td>
					<td>
						::formatNum(m.price)::&nbsp;::currency()::
					</td>
					<td>
						::formatNum(m.total)::&nbsp;::currency()::
						::set total = total + m.total::
					</td>
					
					
				</tr>
				::end::
				
				<tr style="background:#DDD;">
					
					<th colspan="4">Total</th>
					<th>::formatNum(total)::&nbsp;::currency()::</th>
	
				</tr>
				

				</table>
				
				
				$$export(::getURI()+"?"+getParamsString()+"&csv=1"::)
	</div>
</div>
::end::