::use 'plugin/pro/design.mtt'::

::if(vendor.isDisabled())::	
    ::if(vendor.disabled!=3)::
    <!--other reason than turnoverLimitReached-->
    <div class="col-md-12">			
        <div class="alert alert-danger">
            <i class="icon icon-alert"></i>
            Ce compte producteur est bloqué et n'accepte plus de commandes. 
            Raison : <b>::vendor.getDisabledReason()::</b>
        </div>
    </div>	
    ::end::
::end::

<div class="col-md-12">
	<div id="upgrade-page-neo-container" style="margin-bottom: 16px"></div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            neo.createNeoModule("upgrade-page-neo-container", "upgradePage", {
                vendorId: ::vendor.id::,
                cagetteProOffer: "::company._offer::",
                freemiumResetDate: new Date("::vendor.freemiumResetDate::")
            });
        }); 
    </script>
	<div class=" article">
        ::if(company.discovery)::

		<h2 style="margin-top:0">Votre formule actuelle : Découverte</h2>	
		<div class="row">
            <div class="col-md-5">
                <p>
                    Vos ventes sont limitées à 1000€ par an.<br/>
                    <span class="disabled">(hors ventes réalisées dans des groupes en mode AMAP)</span><br/>
                </p>
                <p class="alert alert-warning">
                    <b>Offre spéciale de lancement : vous pouvez vendre en illimité jusqu’au 1er février 2022</b><br/>
                </p>
                <p>
                    ::set frdate = getDate(vendor.freemiumResetDate)::
                    Date de référence pour calculer les ventes annuelles :<br/>
                    <b>::frdate.d:: ::frdate.m::</b> 
                </p>
            </div>
            <div class="col-md-7">
                <div id="discoveryVendorTurnoverLimit"></div>
                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        neo.createNeoModule("discoveryVendorTurnoverLimit", "discoveryVendorTurnoverLimit", {
                            vendorId: ::vendor.id::
                        });
                    }); 
                </script>
            </div>
            
        </div>
        
        ::else::
        <h2 style="margin-top:0">Votre formule actuelle : Membre</h2>	
        <p>
            Vous avez un compte producteur illimité.
        </p>
        ::end::

	</div>
</div>

<style>
    .priceBox{
        font-size: 1.4em;
        background-color: #f5f5f5;
        padding: 8px 12px;
        border-radius: 8px;
        
    }

    .features{
        margin:16px;
        min-height: 120px;
    }
</style>

<div class="col-md-12">
	<div class=" article">
