::use 'plugin/pro/design.mtt'::

<div class="col-md-12">
	<div class=" article">
		<h2>C.A par distribution</h2>	
		<p>
			Du ::hDate(startDate):: au ::hDate(endDate)::
		</p>
        
        
		<p>
			<table class="table table-bordered">
				<tr>
                    <th>Distribution</th>
                    <th>::theme.groupWordingShort.toUpperCase()::</th>
					<th>C.A TTC</th>
					<th>Virement correspondant</th>
				</tr>
				::foreach md multidistribs::
                    <tr>

                        <td>
                            ::hDate(md.getDate())::<br/>                        
                        </td>
                        <td>
                            ::md.getGroup().name::
                        </td>
                        
                        ::if md.isValidated()::
                            <td>
                                ::set amount = getMangopayECTotal(md)::
                                ::formatNum(amount):: &euro;
                            </td>

                            ::set payouts = getMangopayGroupPayout(md)::
                            <td>
                            ::foreach payout payouts::
                                ::payout.getAmount():: &euro;
                                <a href="/transaction/mangopay/group/payOut/::payout.payOutId::" class="btn btn-default btn-sm">Détail virement</a>
                                <a href="/transaction/mangopay/group/multiDistrib/::md.id::" target="_blank" class="btn btn-default btn-sm">Justificatif</a>
                                <br/>
                            ::end::
                            </td>                            

                        ::else::                        
                            <td>
                                -
                            </td>
                            <td>
                                <span class="disabled">Trop tôt, cette distribution n'est pas encore validée</span>
                            </td>
                        ::end::

                    </tr>
                ::end::

			</table>
		</p>				
	</div>
</div>




::end::