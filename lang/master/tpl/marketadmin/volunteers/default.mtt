<h3>::_("Volunteer roles")::</h3>
<p>
	::raw _("Here you can define volunteers roles.")::
</p>

<table class="table table-bordered">
	<tr>
		<th>
			::_("Volunteer Role")::
		</th>
		<th>
			::_("Related catalog")::
		</th>
		<th></th>
	</tr>
	
	::foreach role volunteerRoles::
	<tr>
		<td>
			<span>::role.name::</span>
		</td>
		<td>
			::if role._catalog!=null ::
				<span>::role._catalog.name::</span>
            ::else::
				<span>::_("None")::</span>
            ::end::
		</td>
		<td>
			<div class="btn-group">
			$$edit(::_("Edit")::,/marketadmin/volunteers/editRole/::role.id::)
			$$delete(::_("Delete")::,/marketadmin/volunteers/deleteRole/::role.id::?token=::token::)
			</div>
		</td>
	</tr>
	
	::end::
</table>


$$insert(::_("Add a role")::,/marketadmin/volunteers/insertRole)


